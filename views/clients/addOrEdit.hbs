<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                {{#if client._id }}
                    Editando cliente ID: <span class="badge rounded-pill bg-warning text-dark">{{ client._id }}</span>
                {{else}}
                    Inserindo um novo cliente
                {{/if }}
            </h5>

            <!-- Horizontal Form -->
            <form action="/clients/addOrEdit" method="post">
                <input type="hidden" name="_id" value="{{client._id}}">
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Nome</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" name="title" placeholder="TÃ­tulo do livro" required value="{{client.name}}">
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    {{#unless client._id }}
                        <button type="reset" class="btn btn-secondary">Limpar</button>
                    {{/unless}}
                </div>
            </form><!-- End Horizontal Form -->
        </div>
    </div>
 </div>         